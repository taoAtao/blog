<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cnc.blog.dao.IUserInfoDao">
    <resultMap id="userInfo" type="com.cnc.blog.pojo.UserInfo">
        <id column="ID" property="id" />
        <result column="NAME" property="name" />
        <result column="PASSWORD" property="password" />
        <result column="SEX" property="sex" />
        <result column="BIRTHDAY" property="birthday" />
        <result column="CREAT_TIME" property="creatTime" />
        <result column="UPDATE_TIME" property="updateTime" />
    </resultMap>

    <select id="getUserInfoById" parameterType="Integer" resultMap="userInfo">
        select * from blog_user_info where ID=#{id}
    </select>

    <select id="listUserInfo" resultMap="userInfo">
        select * from blog_user_info
    </select>

    <insert id="addUserInfo" parameterType="com.cnc.blog.pojo.UserInfo">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            select LAST_INSERT_ID()
        </selectKey>
    INSERT INTO blog_user_info(NAME,PASSWORD,SEX,BIRTHDAY) VALUES(#{name},#{password},#{sex},#{birthday});
    </insert>


</mapper>
